import Sismos from '../components/Sismos.jsx';
---

<Layout title="Sismologia Nandev.">
	<main>
		<nav class="bg-slate-800 p-12 rounded-b-2xl flex justify-between items-center">
			<h1 class="text-center text-slate-200 font-bold text-3xl">Sismologia Tailwind</h1>
